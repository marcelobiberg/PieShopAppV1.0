@model Pie
    
<h2>@Model.Name</h2>

<div class="thumbnail">
    <img alt="@Model.Name" src="@Model.ImageUrl" />
    <div class="caption-full">
        <h3 class="pull-right">
            @Model.Price.ToString("c")
        </h3>
        <h3>
            @Model.ShortDescription
        </h3>
        <p>@Model.LongDescription</p>
    </div>
</div>
